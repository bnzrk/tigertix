@{
    var isAuthenticated = User.Identity?.IsAuthenticated;
    var currentPage = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
}

<html>
    <body>
        <header id="TopBanner">
            <div id="TopBannerLeft">
                <div class="tt-logo">
                    <a href="/App/Index" , class="NoHyperlinkUnderline">
                        <span class="tt-logo-tiger">Tiger</span><span class="tt-logo-tix">Tix</span>
                    </a>
                </div>
            </div>
            <div id="TopBannerRight">
                @if (isAuthenticated != true)
                {
                    <a href="/App/Login" class="NoHyperlinkUnderline general-button-purple">Login</a>
                    <a href="/App/Register" class="NoHyperlinkUnderline general-button-orange">Register</a>
                }
                else
                {
                    if (currentPage == "profile")
                    {
                        <form asp-controller="" asp-action="Logout" method="post" class="form-no-margin">
                            <button type="submit" class="general-button-purple">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a href="/App/Profile" class="NoHyperlinkUnderline general-button-purple">My Account</a>
                    }
                }
            </div>
        </header>
        <div class="banner-spacer">
        </div>
        <div>
            @RenderBody()
        </div>
    </body>
</html>