@model EventViewModel
@{

    ViewData["Title"] = "Event Creation";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TigerTix: @ViewData["Title"]</title>
</head>
<body>
    <h1>Event Info</h1>

    <form method="post">
        <label>Event Name:</label>
        <br />
        <input type="text" name="name" />
        <br />
        <label>Month:</label>
        <br />
        <input type="number" name="datemonth" />
        <br />
        <label>Day</label>
        <br />
        <input type="number" name="dateday" />
        <br />
        <label>Year</label>
        <br />
        <input type="number" name="dateyear" />
        <br />
        <input type="submit" value="Create" />
    </form>
</body>
</html>