@model EventViewModel
@{

    ViewData["Title"] = "Event Creation";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TigerTix: @ViewData["Title"]</title>
</head>
<body>
    <h1>Event Info</h1>

    <form asp-action="CreateEvent" method="post">
        <div><
            <label asp-for="EventName"></label>
            <br />
            <input asp-for="EventName" class="form-control" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        <div>
        <br />
        <div>
            <label asp-for="EventDate"></label>
            <br />
            <input asp-for="EventDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
        <br />
        <input type="submit" value="Create" />
    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>