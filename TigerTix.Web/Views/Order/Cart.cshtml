@model OrderViewModel
@{
    Layout = "~/Views/Shared/_BannerLayout.cshtml";
    ViewData["Title"] = "My Cart";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TigerTix: @ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,100..900;1,100..900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="~/css/main.css" rel="stylesheet">
</head>
<body>
    <div class="column-container">
        <div class="focus-container CartContainer">
            <ul class="ticket-list">
                        <li class="ticket-item header-row">
                    <div class="ticket-info">
                        <span class="header-name">Event Name - ID</span>
                        <span class="header-price right-align">Price</span>
                    </div>
                </li>
                    @foreach (var entry in Model.Tickets)
                    {
                        <li class="ticket-item">
                            <div class="ticket-info">
                                    <span class="event-id">@entry.EventName - @entry.Id</span>
                                <span class="ticket-price right-align">$@entry.Price</span>
                            </div>
                            <div class="remove-link">
                                <a href="/order/cart">Remove from cart</a>
                            </div>
                        </li>
                    }
            </ul>

            <h2>Total Price (@Model.Tickets.Count Tickets): $@Model.Tickets.Sum(ticket => ticket.Price)</h2>
        </div>

        <div class="focus-container checkout-box">
            <h3>Total Price: $@Model.Tickets.Sum(ticket => ticket.Price)</h3>
                <a href="/order/checkout?userId=@Model.UserId&orderId=@Model.Id" class="general-button-orange NoHyperlinkUnderline"> Proceed to Checkout</a>
        </div>
    </div>
</body>
</html>
